{
    "name": "chevere/chevere",
    "description": "The chevere library",
    "homepage": "https://chevere.org",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Rodolfo Berrios",
            "email": "rodolfo@chevere.org",
            "homepage": "https://chevere.org"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-ctype": "*",
        "ext-ds": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-zend-opcache": "*",
        "kevinlebrun/colors.php": "^1.0",
        "laminas/laminas-diactoros": "^2.4",
        "myclabs/deep-copy": "^1.10",
        "php-ds/php-ds": "^1.4",
        "psr/container": "^2.0",
        "ramsey/uuid": "^4.1",
        "thecodingmachine/safe": "^1.3"
    },
    "require-dev": {
        "chevere/var-dump": "~0.2",
        "phpstan/phpstan": "^1.4",
        "phpunit/phpunit": "^9.5",
        "symplify/easy-coding-standard": "^10.1"
    },
    "autoload": {
        "files": [
            "src/DataStructure/functions.php",
            "src/Filesystem/functions.php",
            "src/Iterator/functions.php",
            "src/Message/functions.php",
            "src/Parameter/functions.php",
            "src/Str/functions.php",
            "src/Type/functions.php",
            "src/VarSupport/functions.php",
            "src/Writer/functions.php"
        ],
        "psr-4": {
            "Chevere\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Chevere\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "update-cs": "curl --create-dirs -O --output-dir .ecs https://raw.githubusercontent.com/chevere/code-style/main/.ecs/ecs-chevere.php"
    },
    "scripts-descriptions": {
        "update-cs": "Update Chevere code style definition"
    }
}
