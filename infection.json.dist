{
    "$schema": "https://raw.githubusercontent.com/infection/infection/0.26.13/resources/schema.json",
    "source": {
        "directories": [
            "src/"
        ],
        "excludes": [
            "Throwable"
        ]
    },
    "logs": {
        "html": "build/logs/html/infection.html",
        "stryker": {
            "report": "/^.*$/"
        }
    },
    "mutators": {
        "@default": true
    },
    "testFrameworkOptions": "--configuration=phpunit-report.xml"
}
